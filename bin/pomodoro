#!/usr/bin/env python

import argparse
from pomodoro.pomodoro import Pomodoro


def main():
  parser = argparse.ArgumentParser()
  parser.add_argument('-s', '--sessions',
                      nargs='+', help='sessions',
                      default=['25', '5'], required=False)
  args = parser.parse_args()
  sessions = [int(session) for session in args.sessions]
  Pomodoro(sessions).start()


if __name__ == '__main__':
  main()
